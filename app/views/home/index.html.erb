<h1>Fluxo de caixa</h1>

<div class="dvCaixas">
  <div><br>
    Valor Total
    R$ 200
  </div>
  <div><br>
    Receitas
    R$ 200
  </div>
  <div><br>
    Despesas
    R$ 200
  </div>
</div>

<div class="dvBusca">
  <div>
    <form action="/" method="get">
      <input type="text" class="form-controll" placeholder="Digite algo" name="tipo">
      <button type="submit" class="btn btn-primary">Buscar</button>
    </form>
  </div>
  <div>
    <a href="/adicionar" class="btn btn-primary">Adicionar</a>
  </div>
</div>

<div class = "dvTabela">
    <table>
      <thead>
        <tr>
          <th scope="col">Tipo</th>
          <th scope="col">Valor</th>
          <th scope="col">Status</th>
          <th scope="col"></th> <!-- Coluna em branco -->
        </tr>
      </thead>
      <tbody>
        <%= @extrato.each do |item| %>
        <tr>
          <td><%= item.tipo %></td>
          <td>R$ <%= item.valor %></td>
          <td><%= item.status == 1 ? "Debito" : "Credito" %></td>
          <td></td> <!-- CÃ©lula em branco -->
        </tr>
        <% end %>
      </tbody>
    </table>
</div>